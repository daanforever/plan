= simple_form_for(Task.new, remote: true) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    .input-group
      = f.input_field :title, class: 'col-sm'
      .input-group-append
        = f.button :submit, 'â–·', class: 'btn btn-secondary'

%br

%ul.list-group.list-group-flush.sortable.tasks
  - @tasks.each do |task|
    %li.list-group-item{'data-id': task.id, 'data-position': task.position}
      = task.title
